<title>Posts</title>
<body>
  <h1>All Posts:</h1>
  <% for post in @posts %>
    <h2><%=h post.title %></h2>
    <p><%=h post.body %></p>
  <% end %>
  <hr>
  <h1>New Post:</h1>
  <form method=post>
    Title: <input type=text name=title><br>
    Body: <textarea name=body></textarea><br>
    <input type=submit>
  </form>
</body>